<div id="forien-ammo-swapper" class="app {{#if empty}}empty{{/if}}">
    {{#each weapons}}
    <div class="weapon" data-weapon-id="{{this._id}}">
        <div class="image">
            <img src="{{this.img}}" class="image-img" alt="{{this.name}}">
            {{#if this.equipped}}
                <i class="fas fa-hand-holding-box equipped"></i>
            {{/if}}
        </div>
        <div class="info">
            <span class="name">{{this.name}}</span>
            {{#if this.selected}}
            <div class="selected">
                <img src="{{this.selected.img}}" class="image" alt="{{this.selected.name}}">
                <span class="name">{{this.selected.name}} {{#if ../displayQuantity}}({{this.selected.quantity}}){{/if}}</span>
            </div>
            {{else}}
            <div class="selected none">{{localize 'Forien.AmmoSwapper.HUD.noAmmoSelected'}}</div>
            {{/if}}
        </div>
        <div class="ammunitions" style="display: none">
            {{#each this.ammunition}}
            <div class="ammo" data-ammo-id="{{this._id}}">
                <img src="{{this.img}}" class="image" alt="{{this.name}}">
                <span class="name">{{this.name}} {{#if ../../displayQuantity}}({{this.quantity}}){{/if}}</span>
            </div>
            {{/each}}
        </div>
    </div>
    {{/each}}
    <div class="drag-handle">
        <i class="fas fa-arrows-up-down-left-right"></i>
    </div>
</div>